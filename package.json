{
  "name": "boilerplate-api-node-typescript",
  "version": "1.0.0",
  "main": "build/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -r dotenv/config -e ts src/server.ts",
    "start": "tsc && node build/src/server.js",
    "build": "tsc",
    "type-check": "tsc -noEmit",
    "lint": "eslint --config .eslintrc.json {src,tests}/**/*.ts",
    "fix-lint": "eslint --fix --config .eslintrc.json {src,tests}/**/*.ts",
    "prettier": "prettier --check --config .prettierrc {src,tests}/**/*.{ts,js}",
    "fix-prettier": "prettier --write --config .prettierrc {src,tests}/**/*.{ts,js}",
    "migration:create": "typeorm migration:create --dir src/migrations --name",
    "migration:generate": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:generate --name",
    "migration:revert": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:revert",
    "migration:run": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:run",
    "test": "jest"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/faker": "^4.1.7",
    "@types/jest": "^24.9.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.11",
    "@types/pg": "^7.11.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^4.1.0",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@sentry/node": "^5.23.0",
    "@sentry/tracing": "^5.23.0",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.21",
    "typeorm-naming-strategies": "^1.1.0"
  }
}
