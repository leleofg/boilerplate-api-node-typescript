{
    "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2019",
      "module": "commonjs",
      "sourceMap": true,
      "inlineSources": true,
      "moduleResolution": "node",
      "sourceRoot": "/",
      "outDir": "build",
      "rootDir": "./",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}